<% if user_signed_in? %>
  <%= link_to(user) do %>
  <div class="c-container" style="text-decoration: none;">
    <div class="c-box">
    <%# No photos, so we need to push content to the center %>
    <div class="container"></div>
      <div class="c-content">
        <div class="c-details">
          <h2>
            <span class="text-color"><%= user.name %>, <%= user.age %><span>
            <span class="special-char">&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;</span>
            <strong class="match pl-8"> <%= current_user.match_percentage(user) %> % </strong>&nbsp;
          </h2>
          <h3>
            <span class="address text-color"><%= user.address %></span>
          </h3>
          <p class="lang-pairs">
            <strong><%= user.native_language.name.capitalize %> &nbsp;</strong>
            <strong>&rarr;</strong>
            </i>&nbsp;  &nbsp;<strong><%= user.target_language.name.capitalize %></strong>
          </p>
          <br>
          <br>
          <p class="lang-details">
            <span class="lang-level text-color"> [ level in <%= user.target_language.name.capitalize %>: &nbsp;</span>
            <span class="target-lang"><%= user.target_language_level %> ]</span>
          </p>
        </div>
        <%= link_to 'Add', user_matches_path(user, @match), class: "add-button", method: :post %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
